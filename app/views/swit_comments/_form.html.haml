= form_for @swit_comment do |f|
  - if @swit_comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@swit_comment.errors.count, "error")} prohibited this swit_comment from being saved:"
      %ul
        - @swit_comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :swit_id
    = f.number_field :swit_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save'
